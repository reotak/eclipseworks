package intepret;

import java.lang.reflect.Field;

class InstanceField {
	private String name;
	private String value;


	public InstanceField(String name, String value) {
		this.name = name;
		this.value = value;
	}

	public String getName() {
		return name;
	}

	public String getValue() {
		return value;
	}

	public void setValue(Object target, Object value) throws IllegalArgumentException, IllegalAccessException, SecurityException, NoSuchFieldException {
		Field f;

		f = target.getClass().getDeclaredField(name);
		f.setAccessible(true);
		f.set(target, value);
		this.value = value.toString();
	}

	public String toString() {
		return name + " -> " + value;
	}
}
