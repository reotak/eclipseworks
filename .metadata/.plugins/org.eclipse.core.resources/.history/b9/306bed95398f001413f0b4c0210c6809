package ex14_03;

import static org.hamcrest.CoreMatchers.*;

class SafetyAdderRunner implements Runnable {
	SafetyAdder adder;
	final int count;

	public SafetyAdderRunner(SafetyAdder adder, int count) {
		if (adder == null) {
			throw new IllegalArgumentException("want: adder is not null");
		}
		if (count < 0) {
			throw new IllegalArgumentException("want: count >= 0");
		}

		this.adder = adder;
		this.count = count;
	}

	public void run() {
		for (int i = 0; i < count; i++) {
			adder.addPrint();
		}
	}

	public static void main(String []args) {
		SafetyAdder adder = new SafetyAdder(0);
		int count = 100;

		new Thread(new SafetyAdderRunner(adder, count), "runner1").start();
		new Thread(new SafetyAdderRunner(adder, count), "runner2").start();
		new Thread(new SafetyAdderRunner(adder, count), "runner3").start();
		new Thread(new SafetyAdderRunner(adder, count), "runner4").start();

		try {
			Thread.sleep(1000);
		} catch (InterruptedException e) {
			e.printStackTrace();
		}

	}
}
