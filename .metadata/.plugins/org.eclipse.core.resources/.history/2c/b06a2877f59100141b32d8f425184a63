package ex16_09;

import static ex16_09.Util.*;

import java.util.List;

class FieldFormat {
	final String name;
	final Accesser accesser;
	final boolean isStatic;
	final boolean isVolatile;
	final String type;

	public FieldFormat(String name, Accesser accesser, boolean isStatic, boolean isVolatile, String type) {
		this.name = name;
		this.accesser = accesser;
		this.isStatic = isStatic;
		this.isVolatile = isVolatile;
		this.type = type;
	}

	public String toString() {
		String result = "";

		result += isEmpty(accesser.toString()) ? "" : accesser.toString() + " ";
		result += isStatic ? "static " : "";
		result += isVolatile ? "volatile " : "";
		result += type + " ";
		result += name;

		return result;
	}
}
