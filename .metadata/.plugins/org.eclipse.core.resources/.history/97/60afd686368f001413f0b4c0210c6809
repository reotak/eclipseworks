package ex14_03;

class SafetyAdderRunner implements Runnable {
	final int count;

	public SafetyAdderRunner(int count) {
		if (count < 0) {
			throw new IllegalArgumentException("count >= 0");
		}

		this.count = count;
	}

	public void run() {
		for (int i = 0; i < count; i++) {

		}
	}

	public static void main(String []args) {
		int count = 10000;
		SafetyAdderRunner runner1 = new SafetyAdderRunner(count);
		SafetyAdderRunner runner2 = new SafetyAdderRunner(count);

		Thread thread1 = new Thread(runner1, "runnder1");
		Thread thread2 = new Thread(runner2, "runnder2");

		thread1.start();
		thread2.start();


		Thread.sleep(1000);

		System.out.println(num.getNum());
	}
}
