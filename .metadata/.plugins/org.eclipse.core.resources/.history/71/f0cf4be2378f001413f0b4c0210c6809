package ex14_03;

class SafetyAdderRunner implements Runnable {
	SafetyAdder adder;
	final int count;

	public SafetyAdderRunner(SafetyAdder adder, int count) {
		if (adder == null) {
			throw new IllegalArgumentException("want: adder is not null");
		}
		if (count < 0) {
			throw new IllegalArgumentException("want: count >= 0");
		}
		this.adder = adder;
		this.count = count;
	}

	public void run() {
		for (int i = 0; i < count; i++) {
			adder.addPrint();
		}
	}

	public static void main(String []args) {
		SafetyAdder adder = new SafetyAdder(0);
		int count = 10000;
		SafetyAdderRunner runner1 = new SafetyAdderRunner(adder, count);
		SafetyAdderRunner runner2 = new SafetyAdderRunner(adder, count);

		Thread thread1 = new Thread(runner1, "runnder1");
		Thread thread2 = new Thread(runner2, "runnder2");

		thread1.start();
		thread2.start();

		try {
			Thread.sleep(1000);
		} catch (InterruptedException e) {
			e.printStackTrace();
		}

	}
}
