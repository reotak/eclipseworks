package ex16_09;
import static ex16_09.Util.*;

class FieldFormat {
	final String name;
	final String type;
	final String modifier;

	public FieldFormat(String name, String type, String modifier) {
		this.name = name;
		this.type = type;
		this.modifier = modifier;

	}

	public String toString() {
		String result = "";

		if (!isEmpty(modifier)) {
			result += modifier + " ";
		}
		result += type + " ";
		result += name;

		return result;
	}
}
