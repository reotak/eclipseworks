package intepret;

import java.lang.reflect.Constructor;
import java.util.ArrayList;
import java.util.List;

class ObjectCreater {
	Class<?> cls;
	Object object;

	public ObjectCreater(String className) throws ClassNotFoundException,
			InstantiationException, IllegalAccessException {
		this.cls = Class.forName(className);
	}

	public List<intepret.Constructor> getConstructorList() {
		List<intepret.Constructor> consts = new ArrayList<intepret.Constructor>();
		for (Constructor<?> c : cls.getDeclaredConstructors()) {
			consts.add(new intepret.Constructor(
					cls,
					c.getGenericParameterTypes()));
		}

		return consts;
	}
}
