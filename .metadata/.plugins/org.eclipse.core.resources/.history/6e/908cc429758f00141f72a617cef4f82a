package ex14_06;

import java.util.ArrayList;
import java.util.List;

class Program {
	class MessagePrinterRunner implements Runnable {
		private final TimeDisplay disp;
		private final String message;
		private final int notifyCount;

		public MessagePrinterRunner(TimeDisplay disp, String message, int notifyCount) {
			this.disp = disp;
			this.message = message;
			this.notifyCount = notifyCount;
		}
		public void run() {
			disp.runMessagePrinter(message, notifyCount)
		}
	};


	public static void main(String []args) {
		TimeDisplay disp = new TimeDisplay();
		MessagePrinterRunner mp15 = new Program.MessagePrinterRunner(disp, "15sec!!", 15);
		MessagePrinterRunner mp7  = new Program.MessagePrinterRunner(disp, " 7sec!!",  7);

		new Thread(mp15, "15sec message").start();
		new Thread(mp7,  " 7sec message").start();
		new TimeDisplay().runDisplay();
	}
}
