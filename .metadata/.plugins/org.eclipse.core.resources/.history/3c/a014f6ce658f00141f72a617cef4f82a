package ex14_06;

public class MessagePrinter implements Runnable {

	public synchronized void run() {
		int notifyCounter = 0;
		System.out.println("notify counter :" + notifyCounter);
		for (;;) {
			while (notifyCounter < 15) {
				try {
					wait();
				} catch (InterruptedException e) {
					e.printStackTrace();
				}
			}
			notifyCounter++;

			if (notifyCounter >= 15) {
				System.out.println("15 sec!!");
				notifyCounter = 0;
			}
		}
	}

}
