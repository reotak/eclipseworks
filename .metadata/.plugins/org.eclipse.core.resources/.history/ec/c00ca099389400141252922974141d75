package gui;

import java.lang.reflect.Type;

abstract class SetArgumentsWindowManager implements CatchArguments {
	final private Type[] argTypes;
	final private InstanceViewer instanceViewer;
	public SetArgumentsWindowManager(Type[] argTypes, InstanceViewer instanceViewer) {
		this.argTypes = argTypes;
		this.instanceViewer = instanceViewer;
	}

	abstract public void catchArguments(Object[] args);

	public void start() {
		if (argTypes == null || argTypes.length == 0) {
			catchArguments(new Object[0]);
		}

		SetArgumentsWindow window = new SetArgumentsWindow(argTypes, this, instanceViewer);
		window.setVisible(true);
	}
}
